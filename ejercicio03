programa ejercicio03
procesos
  proceso juntarYSumar(ES flores: numero; ES papeles: numero; ES cumplio: boolean)
  variables 
    aux: numero
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      papeles:= papeles + 1
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:= flores + 1
    aux:= flores + 1
    si papeles = aux
      cumplio:= T
    repetir papeles
      depositarPapel
    repetir flores
      depositarFlores   
  fin
  proceso girar(E vecesAGirar: numero)
  comenzar
    repetir vecesAGirar
      derecha
  fin
  proceso hacerEscalon(E dimension: numero; ES escalonCumple: numero)
  variables
    papeles: numero
    flores: numero
    cumplio: boolean
  comenzar
    papeles:= 0
    flores:= 0
    cumplio:= F
    repetir 2
      repetir dimension
        juntarYSumar(papeles, flores, cumplio)
        mover
      girar(1)
    girar(2)
    si cumplio 
      escalonCumple:= escalonCumple + 1
    
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robotEscalon
  variables
    dim: numero
    escalonCumple: numero
    papLoc: numero
    floLoc: numero
    aux: numero
  comenzar
    dim:= 1
    escalonCumple:= 0
    mientras dim <= 4
      hacerEscalon(dim, escalonCumple)
      dim:= dim + 1
    {EVALUAR ULTIMA ESQUINA}
    mientras HayPapelEnLaEsquina
      tomarPapel
      papLoc:= papLoc + 1
    mientras HayFlorEnLaEsquina
      tomarFlor
      floLoc:= floLoc + 1
    aux:= floLoc + 1
    si papLoc = aux
      escalonCumple:= escalonCumple + 1
    repetir papLoc
      depositarPapel
    repetir floLoc
      depositarFlores 
    Informar('la cantidad de escalones que los papeles superaron en uno a las flores es ', escalonCumple)
  fin
variables
  r1: robotEscalon
  r2: robotEscalon
  r3: robotEscalon
comenzar
  AsignarArea(r1, ciudad)
  AsignarArea(r2, ciudad)
  AsignarArea(r3, ciudad)
  Iniciar(r1, 12,14)
  Iniciar(r2, 17,10)
  Iniciar(r3, 22,6)
fin